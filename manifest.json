{
    "manifest_version": 3,
    "name": "GPT Read Files Extension",
    "version": "1.0",
    "description": "This extension enables users to upload files for ChatGPT to analyze and summarize.",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "cookies"
    ],
    "content_scripts": [
        {
          "matches": [
            "https://chat.openai.com/chat"
          ],
          "js": [
            "content.js"
          ]
        }
      ],
    "action": {
        "default_title": "GPT Read Files Extension",
        "default_popup": "popup/popup.html"
    }
}