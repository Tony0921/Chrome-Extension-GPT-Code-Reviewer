{
    "manifest_version": 3,
    "name": "File Upload Extension",
    "version": "1.0",
    "description": "This extension allows users to upload files.",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_title": "Upload a File",
        "default_popup": "popup.html"
    }
}